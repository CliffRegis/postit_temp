<% if comment.valid? %>
  <div class='row'>
    <div class='span0 well text-center'> 
      <%= link_to vote_comment_path(comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
        <br/>
      <%= pluralize(comment.total_votes, 'vote') %> 
        <br/>
      <%= link_to vote_comment_path(comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    </div>


    <div class='span8 well'> 
      <em>"<%= comment.body %>"</em>
      
          on <%= link_to comment.post.title, post_path(comment.post) %>
       
       <br>
      <span class='quiet'> by </span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    </div>
  </div>
<% end %>